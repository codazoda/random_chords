<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "randomchords"
        versionCode="120" 
        version   = "1.2.0">

    <gap:platform name="ios" />
    <gap:platform name="android" />
    <gap:platform name="winphone" />

    <name>Random Chords</name>

    <description>
        Generates a random set of chords in the selected key. Get new ideas for your songwriting. Provides and endless supply of chord ideas to play with.
    </description>

    <author href="http://www.joeldare.com/apps" email="joel@joeldare.com">
        Joel Dare
    </author>
    
    <icon src="icon.png" width="1024" height="1024" />
    <icon src="icon_57x57.png" width="57" height="57" />
    <icon src="icon_72x72.png" width="72" height="72" />
    <icon src="icon_76x76.png" width="76" height="76" />
    <icon src="icon_120x120.png" width="120" height="120" />
    <icon src="icon_152x152.png" width="152" height="152" />
    
    <gap:splash src="platform/ios/splash_320x480.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="platform/ios/splash_480x320.png" gap:platform="ios" width="480" height="320" />
    <gap:splash src="platform/ios/splash_640x960.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="platform/ios/splash_640x1136.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="platform/ios/splash_768x1004.png" gap:platform="ios" width="768" height="1004" />
    <gap:splash src="platform/ios/splash_960x640.png" gap:platform="ios" width="960" height="640" />
    <gap:splash src="platform/ios/splash_1024x768.png" gap:platform="ios" width="1024" height="768" />
    <gap:splash src="platform/ios/splash_1136x640.png" gap:platform="ios" width="1136" height="640" />
    <gap:splash src="platform/ios/splash_1536x2008.png" gap:platform="ios" width="1536" height="2008" />
    <gap:splash src="platform/ios/splash_2048x1496.png" gap:platform="ios" width="2048" height="1496" />
    
    <preference name="webviewbounce" value="false" />
    
    <preference name="permissions" value="none" />

</widget>
